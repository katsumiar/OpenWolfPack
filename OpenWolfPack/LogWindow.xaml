        mc:Ignorable="d"
        Title="LogWindow" Height="450" Width="800">
    <Grid>
        <ScrollViewer>
            <RichTextBox Name="LogRichTextBox" IsReadOnly="True"/>
        </ScrollViewer>
    </Grid>
</Window>
